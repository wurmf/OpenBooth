<GridPane fx:id="basicpane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#triggerShot" prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: url('/images/main-background.jpg')" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openbooth.gui.CustomerFrameController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" percentWidth="80.0" />
      <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="90.0" vgrow="SOMETIMES" />
      <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <GridPane fx:id="gridpanel" GridPane.columnIndex="1">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints percentHeight="50.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints percentHeight="32.5" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints percentHeight="17.5" valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>

            <Button fx:id="allpicturesview" mnemonicParsing="false" onAction="#switchToMiniaturFrame" text="Alle Bilder ansehen" GridPane.rowIndex="2" />
            <ImageView fx:id="logo" fitHeight="600" fitWidth="700" pickOnBounds="true" preserveRatio="true">

               <image>
                  <Image url="/images/logo.png" />
               </image>
            </ImageView>
         </children>
      </GridPane>
      <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" percentWidth="50.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints percentHeight="100.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="login" mnemonicParsing="false" onAction="#switchToLogin" text="Administrator" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <Button fx:id="rightbutton" mnemonicParsing="false" onAction="#switchToFilter" GridPane.columnIndex="2" />
      <Button fx:id="leftbutton" mnemonicParsing="false" onAction="#switchToAllImages" />
   </children>
</GridPane>
